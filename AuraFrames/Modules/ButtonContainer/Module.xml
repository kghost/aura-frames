<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

  <Script file="Module.lua" />
  <Script file="Prototype.lua" />

  <Frame name="AuraFramesButtonContainerTemplate" parent="UIParent" virtual="true" movable="true">
  </Frame>

  <Button name="AuraFramesButtonTemplate" virtual="true" hidden="true">
    <Size>
      <AbsDimension x="36" y="36"/>
    </Size>
    <Layers>
      <Layer level="BORDER">
        <Texture name="$parentIcon" />
      </Layer>
      <Layer level="ARTWORK">
        <FontString name="$parentCount" hidden="true" justifyH="RIGHT" />
        <FontString name="$parentDuration" hidden="true" />
        <Texture name="$parentBorder" file="Interface\Buttons\UI-Debuff-Overlays" alphaMode="ADD">
          <Size>
            <AbsDimension x="36" y="36"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
        <Texture name="$parentMiniBar" />
      </Layer>
    </Layers>
    <Frames>
      <Cooldown name="$parentCooldown" level="BORDER" hidden="true">
        <Size>
          <AbsDimension x="36" y="36"/>
        </Size>
        <Anchors>
          <Anchor point="CENTER" />
        </Anchors>
      </Cooldown>
    </Frames>
  </Button>

</Ui>